pipeline {
    agent any

    stages {
        stage('Clonar o repositorio') {
            steps {
                git 'https://github.com/Andersonalmeida99/TESTES-MOBILE-EBAC-SHOP.git'
        }
    }
        stage('Instalar dependencias') {
            steps {
                bat'npm install'
            }
        }
        stage('Executar Testes') {
            steps {
                bat 'NO_COLOR=1 npm run cy:run'
            }
        }
    }
}
